<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/acEt_1"
        android:layout_width="44dp"
        android:layout_height="55dp"
        android:background="@drawable/verity_bg_selector"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:maxLines="1"
        android:textColor="#4C4948"
        android:textSize="24sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/acEt_2"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/acEt_2"
        android:layout_width="44dp"
        android:layout_height="55dp"
        android:background="@drawable/verity_bg_selector"
        android:enabled="false"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:maxLines="1"
        android:textColor="#4C4948"
        android:textSize="24sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/acEt_1"
        app:layout_constraintRight_toLeftOf="@id/acEt_3"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/acEt_3"
        android:layout_width="44dp"
        android:layout_height="55dp"
        android:background="@drawable/verity_bg_selector"
        android:enabled="false"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:maxLines="1"
        android:textColor="#4C4948"
        android:textSize="24sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/acEt_2"
        app:layout_constraintRight_toLeftOf="@id/acEt_4"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="3" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/acEt_4"
        android:layout_width="44dp"
        android:layout_height="55dp"
        android:background="@drawable/verity_bg_selector"
        android:enabled="false"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:maxLines="1"
        android:textColor="#4C4948"
        android:textSize="24sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/acEt_3"
        app:layout_constraintRight_toLeftOf="@id/acEt_5"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="4" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/acEt_5"
        android:layout_width="44dp"
        android:layout_height="55dp"
        android:background="@drawable/verity_bg_selector"
        android:enabled="false"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:maxLines="1"
        android:textColor="#4C4948"
        android:textSize="24sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/acEt_4"
        app:layout_constraintRight_toLeftOf="@id/acEt_6"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="5" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/acEt_6"
        android:layout_width="44dp"
        android:layout_height="55dp"
        android:background="@drawable/verity_bg_selector"
        android:enabled="false"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:maxLines="1"
        android:textColor="#4C4948"
        android:textSize="24sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/acEt_5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="6" />
</androidx.constraintlayout.widget.ConstraintLayout>